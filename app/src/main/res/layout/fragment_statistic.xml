<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.barbot.barbot.StatisticFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:text="@string/Drink_Statistic"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@+id/statistic_listView"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/statistic_listView"
            android:layout_width="625dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/statistic_ingredients_listView" />

        <ListView
            android:id="@+id/statistic_ingredients_listView"
            android:layout_width="625dp"
            android:layout_height="800dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/Ingredient_Statistic"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@+id/statistic_ingredients_listView"
            android:layout_marginBottom="-50dp"
            android:layout_alignStart="@+id/statistic_ingredients_listView" />
    </RelativeLayout>

</FrameLayout>
