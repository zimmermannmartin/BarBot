<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.barbot.barbot.CreateIngredientFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:id="@+id/textView8"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:text="@string/createIngredientTitle" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/editText"
            android:hint="@string/createIngredientNameOfIngredient"
            android:textAlignment="center" />

        <TextView
            android:text="@string/createIngredientNameOfIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:id="@+id/button"
            android:text="@string/createIngredientPictureButton"
            android:textSize="14sp" />

        <ImageView
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView2"
            android:layout_width="240dp"
            android:layout_height="160dp"
            android:layout_below="@+id/button"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8"
            android:layout_marginTop="23dp" />

        <Button
            android:text="@string/createIngredientCreateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="69dp"
            android:id="@+id/button4"
            android:textSize="18sp" />
    </RelativeLayout>
</FrameLayout>
